@* Molecule: one time row (icon + label + time, e.g. "Voorbereiden 10 min"). *@
@namespace RecipeLibrary.Components.Molecules

<div class="flex items-center gap-1.5 text-sm text-gray-600 @CssClass">
    @if (UseClockIcon)
    {
        <Icon Name="Icon.IconName.Clock" CssClass="w-4 h-4 flex-shrink-0" />
    }
    else
    {
        <Icon Name="Icon.IconName.CookingPot" CssClass="w-4 h-4 flex-shrink-0" />
    }
    <span>@Label @Minutes min</span>
</div>

@code {
    [Parameter] public string Label { get; set; } = ""; // "Voorbereiden" or "Bereiden"
    [Parameter] public int Minutes { get; set; }
    [Parameter] public bool UseClockIcon { get; set; } = true; // false = cooking pot
    [Parameter] public string? CssClass { get; set; }
}
