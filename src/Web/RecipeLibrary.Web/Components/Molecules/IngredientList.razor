@* Molecule: "Ingrediënten" heading + bullet list of names. *@
@namespace RecipeLibrary.Components.Molecules

<div class="@CssClass">
    <Heading Level="3" CssClass="text-sm font-medium text-gray-900 mb-1">Ingrediënten</Heading>
    <ul class="list-disc list-inside text-sm text-gray-700 space-y-0.5">
        @foreach (var name in IngredientNames)
        {
            <li>@name</li>
        }
    </ul>
</div>

@code {
    [Parameter] public IReadOnlyList<string> IngredientNames { get; set; } = [];
    [Parameter] public string? CssClass { get; set; }
}
