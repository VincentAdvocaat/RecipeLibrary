@* Organism: one recipe card for grid view (image + title + description + meta + ingredients). *@
@namespace RecipeLibrary.Components.Organisms

<div class="flex flex-col bg-white rounded-lg border border-gray-200 overflow-hidden hover:border-gray-300 @CssClass">
    <div class="aspect-square w-full">
        <Image Src="Item.ImageUrl" Alt="@Item.Title" Square="true" />
    </div>
    <div class="p-4 flex-1 flex flex-col">
        <Heading Level="3" CssClass="mt-0 mb-1">@Item.Title</Heading>
        @if (!string.IsNullOrEmpty(Item.Description))
        {
            <p class="text-sm text-gray-600 mb-2 line-clamp-2">@Item.Description</p>
        }
        <RecipeMeta PreparationMinutes="Item.PreparationMinutes" CookingMinutes="Item.CookingMinutes" CssClass="mb-3" />
        <IngredientList IngredientNames="Item.IngredientNames" />
    </div>
</div>

@code {
    [Parameter, EditorRequired] public RecipeOverviewItem Item { get; set; } = null!;
    [Parameter] public string? CssClass { get; set; }
}
