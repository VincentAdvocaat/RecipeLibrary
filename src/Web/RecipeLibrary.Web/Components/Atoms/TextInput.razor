@* Atom: text input with Tailwind styling. *@
@namespace RecipeLibrary.Components.Atoms

<input type="text"
       class="block w-full rounded border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:border-gray-500 focus:outline-none focus:ring-1 focus:ring-gray-500 sm:text-sm @CssClass"
       placeholder="@Placeholder"
       value="@Value"
       value:event="oninput"
       @oninput="HandleInput"
       @attributes="AdditionalAttributes" />

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? CssClass { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }

    private async Task HandleInput(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        Value = value;
        await ValueChanged.InvokeAsync(value);
    }
}
